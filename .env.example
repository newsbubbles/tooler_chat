# PostgreSQL Database URL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/toolerchat

# JWT Secret Key (generate a strong one for production)
SECRET_KEY=your-secret-key-here

# OpenAI API Key for agents
OPENAI_API_KEY=your-openai-api-key-here

# Port configuration
BACKEND_PORT=34130
FRONTEND_PORT=34140

# Application environment
ENVIRONMENT=development  # development, staging, production

# Logging configuration
LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
STRUCTURED_LOGS=true     # Whether to use JSON format (true/false)
MAX_DEBUG=false          # Enable ultra-verbose logging with full request/response data
SQL_ECHO=false           # Enable SQL query logging (true/false)

# Optional: Logfire API Key if using Logfire for logging
# LOGFIRE_API_KEY=your-logfire-api-key-here

# Optional: OpenRouter API Key if using other models
# OPENROUTER_API_KEY=your-openrouter-api-key-here

# Required for Serper Google search functionality
# SERPER_API_KEY=your-serper-api-key-here